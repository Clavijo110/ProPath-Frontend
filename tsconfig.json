{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom", "vite/client", "node", "react"],
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}